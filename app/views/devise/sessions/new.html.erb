<div class="jumbotron"> <h2 align="center">Alumini Website</h2> </div>

<div class= "container">
<div class="form-group">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="col-md-4"></div>
   <div class="col-md-4">

<center><h2>LOGIN</h2></center>
    <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,placeholder: "Email Id",class: "form-control",autofocus: false %>

  </div>

<div class="field">
    <%= f.label :password %>
    <%= f.password_field :password,placeholder: "Password",class: "form-control", autocomplete: "off" %>
  </div>
   

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions table-responsive">
  <table class="table">
  <th>
  <td><%= f.submit "Log in",class: "btn btn-success"%> 
</td>
    <td><%= render "devise/shared/links" %></td>
    </th>
    <th>
      <!--td><%= f.submit "Sign Up", class: "btn btn-success" %></td-->
      <td><%= link_to "Sign up", new_user_path(resource_name),class: "btn btn-success" %> </td>
    </th>
    </table>
  </div>
<% end %>

</div>
</div>
</div>
</br></br></br></br></br>
