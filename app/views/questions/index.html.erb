<h2 align="center"> Welcome to the FORUM:</h2>
<h3> 
<p id="notice"><%= notice %></p>

<div class="col-sm-1"></div>

<% @questions.each do |question| %>
<div class="container">
<div class="page-header">
    <h2>
        <small><%= link_to question.body.html_safe, question %><br><small>
        <class="author">Submitted
            by <%=question.student.email%>
            
            </div>
  <div class="btn-group">
        <!-- <a class="btn btn-default btn-sm" href="<% questions_path %>">Visit question</a> -->
        <%= link_to like_question_path(question), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Upvote
        <%= question.get_upvotes.size %>
        <% end %>
        <%= link_to dislike_question_path(question), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down">
            Downvote
            <%= question.get_downvotes.size %>
            <% end %>
        </div>
    
    <% end %>
  </h2>
            </div>
            <br>
<div class="container">
 <div class="col-sm-1"></div> 
<div class="col-md-5">
<div id="box">
<%= simple_form_for [@question, Question.new]  do |f| %>
  <div class="form-inputs">
  <h1>Short Description</h1>
    <%= f.input :tile ,label:" Short Description "%>
    <h1>Ask a Question</h1>
    <%= f.input :body, as: :wysihtml5,label:"Question " %>
  </div>
  <div class="form-actions">
    <%= f.button :submit,value="Ask Question" %>
  </div>
  </div>
<% end %>
</div>
</div>
<br>
<style>
#box{
    background-color: lightgrey;
    width: 700px;
    border: 5px solid lightblue;
    padding: 10px;
    margin: 1px;
}
</style>
